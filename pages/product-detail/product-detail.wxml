<view class="phone-detail-container flex-column">
  <scroll-view scroll-y="{{true}}" style="height: {{mainHeight}}px">
    <view class='p-detail-h-wrapper'>
      <wq-swipper images="{{curPhone.images}}"></wq-swipper>
    </view>
    <view class='card-view'>
      <wq-product-header tags="{{curPhone.tags}}" name="{{curPhone.name}}" tag="{{curPhone.tag}}"></wq-product-header>
    </view>
    <view class='card-view'>
      <wq-current-product product="{{curPhone}}"></wq-current-product>
    </view>
    <view class='card-view'>
      <van-cell value="更多门店" icon="shop-o" title-class='header-info' border>
        <view slot="title" class='sh-slot'>
          <view class='shop-near-desc'>附近门店</view>
          <view class="shop-distance">
            <van-tag type="danger">路程{{shop.distance}}km</van-tag>
          </view>
        </view>
      </van-cell>
      <wq-near-shop bind:detail="openShopDetail" shop="{{shop}}" bind:more="openMoreShops"></wq-near-shop>
    </view>
    <view>
      <wq-footer text="用户评价"></wq-footer>
    </view>
    <view wx:if="{{ratings.remarks.length >0}}" class='card-view'>
      <block wx:for="{{ratings.remarks}}" wx:key="id" wx:for-item="item">
        <wq-remark remark="{{item}}"></wq-remark>
      </block>
    </view>
    <view class='remark-load-more'>
      <button loading="{{loading}}" class="load-btn-more" disabled="{{disabled}}" catch:tap="setRemarkLoading">
        加载更多
      </button>
    </view>
  </scroll-view>
  <view class="send-to-order">去下单</view>
</view>