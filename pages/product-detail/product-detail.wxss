.p-detail-h-wrapper{
  height:600rpx;
}

.phone-detail-container{
  background: #ffffff;
}

.card-view{
  border:1px solid #ccc;
  border-radius: 8rpx;
}

.remak-view , .card-view{
  background: #fefefe;
  width:94%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.user-remark-info{
  margin-bottom: 20rpx;
}

.load-btn-more{
  color:#666;
  font-size: 30rpx;
}

.load-btn-more::after{
  border:none;
}

.send-to-order{
  background: red;
  text-align: center;
  width: 100%;
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  border-radius: 0;
  border: none;
  color: #fff;
  font-size: 30rpx;
  bottom: 0;
  left:0;
}

.slide-p-params{
  background:#ffffff;
  margin-bottom:20rpx;
}

.sh-near{
  font-weight:bold;
  margin-right: 10rpx;
}
.sh-slot{
  display: flex;
  width:80%;
  flex-direction: row;
  line-height: 50rpx;
}

.shop-near-desc{
  margin-right: 10rpx;
}

.add-o-info{
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.add-o-desc{
  font-size:24rpx;
  line-height: 40rpx;
  color: red;
}

.more-p-add{
  margin:0 auto;
  text-align: center;
}

.wq-pop-header-section{
  border-bottom: 1rpx solid #efefef;
  position: relative;
}

.pop-num{
  display: flex;
  padding: 20rpx;
  flex-direction: row;
  justify-content: space-between;
}

.fixed-btn-block{
  width:100%;
  position:fixed;
  left:0;
  height:88rpx;
  padding:0;
  bottom: 0;
}

.buy-btn{
  height:88rpx;
  width:100%;
  line-height: 88rpx;
}