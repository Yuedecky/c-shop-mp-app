.p-detail-h-wrapper{
  height:600rpx;
  position: relative;
}

.phone-detail-container{
  background: #ffffff;
}

.card-view{
  border:1px solid #efefef;
  border-radius: 8rpx;
  background: #efefef;
}

.remak-view , .card-view{
  width:94%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.no-more-data{
  margin-bottom: 30rpx;
}

.user-remark-info{
  margin-bottom: 20rpx;
}

.load-btn-more{
  color:#666;
  font-size: 30rpx;
}

.load-btn-more::after{
  border:none;
}

.send-to-order{
  background: red;
  text-align: center;
  width: 100%;
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  border: none;
  color: #fff;
  font-size: 30rpx;
  bottom: 0;
  left:0;
}

.slide-p-params{
  background:#ffffff;
  margin-bottom:20rpx;
}

.sh-near{
  margin-right: 10rpx;
}
.sh-slot{
  display: flex;
  width:80%;
  flex-direction: row;
  line-height: 50rpx;
}

.shop-near-desc{
  margin-right: 10rpx;
}

.add-o-info{
  font-size: 30rpx;
  margin-right: 10rpx;
}
.add-o-desc{
  font-size:24rpx;
  line-height: 40rpx;
}

.more-p-add{
  margin:0 auto;
  text-align: center;
}






.buy-btn{
  height:88rpx;
  width:100%;
  line-height: 88rpx;
}

.title-bottom{
  border-bottom: 1rpx solid #cccccc;
}

.dot-pos{
  position: absolute;
  top:20rpx;
  right: 20rpx;
}