<!-- index.wxml -->
<view class="index-container">
  <van-search value="{{value}}" disabled placeholder='请输入商品名称' catch:tap='onSearchOpen'></van-search>
  <wq-swipper images="{{adv.images}}" duration="{{adv.duration}}" indicatorDots="{{adv.indicatorDots}}" autoplay="{{adv.autoplay}}"></wq-swipper>
  <view class='adv-text'>{{advText}}</view>
  <wq-bang title='0元购排行' rankData="{{bang}}"></wq-bang>
  <van-tabs active="{{ active }}" bind:change="onChange">
    <van-tab title="上门体验">
      <van-steps steps="{{ doorSteps }}" active="{{ doorActive }}" direction="vertical" active-color="#f44" />
    </van-tab>
    <van-tab title="到店体验">
      <van-steps steps="{{ shopSteps }}" active="{{ shopActive }}" direction="vertical" active-color="#f44" />
    </van-tab>
  </van-tabs>
  <van-cell value="更多门店" icon="shop-o" title-class='header-info' border>
    <view slot="title">
      <view class="van-cell-text">
        <text class='near-desc'>附近门店</text>
        <van-tag type="danger" class='shop-distance'>路程{{nearByKm}}km</van-tag>
      </view>
    </view>
  </van-cell>
  <wq-near-shop shopName="{{shop.shopName}}" shopTimes='{{shop.times}}' shopLocation="{{shop.shopLocation}}" shopPhoto="{{shop.shopPhoto}}"></wq-near-shop>
  <van-cell title="0元购品牌" value='更多' icon="new-o" title-class='header-info' border></van-cell>
  <view class='brand-list'>
    <block wx:for='{{brands}}' wx:key='item.id' wx:for-item="item">
      <wq-brand logo="{{item.logo}}" bind:tap='onBrandTap' name="{{item.name}}" />
    </block>
  </view>
  <van-cell title="0元购好货" value='更多' icon='thumb-circle-o' title-class='header-info' border></van-cell>
  <view class="zero-sale">
    <block wx:for="{{zeroSales}}" wx:key="item" wx:for-index="idx">
      <van-card tag="{{item.tag}}" price-class='price-info' title-class='p-title' price="{{item.price}}" desc="好评率{{item.rating}}" title="{{item.name}}" thumb="{{ item.image }}">
        <view slot="tags">
          <block wx:for="{{item.tags}}" wx:key="**this" wx:for-item='tag'>
            <van-tag plain type="primary" size='midium' custom-class='tag-class'>{{tag}}</van-tag>
          </block>
        </view>
        <view slot="footer" class='btn-footer'>
          <van-button plain size="mini" type='danger'>立即0元购</van-button>
        </view>
      </van-card>
    </block>
  </view>
  <wq-footer text="已经到底了" />
</view>