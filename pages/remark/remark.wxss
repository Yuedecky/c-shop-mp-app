.r-container{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    background: #ffffff;
}

.r-header-wrapper{
    margin-bottom: 20rpx;
    height:200rpx;
}

.title{
    margin-bottom: 20rpx;
}

.r-header-wrapper .rates{
    width:80%;
    margin:  0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 20rpx;
}

.keys-block{
    width: 80%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.key-desc{
    color: #ccc;
    font-size: 30rpx;
}

.ex-content{
    width: 100%;
    height: 200rpx;
}

.uploader{
    width:100rpx;
    height: 100rpx;
}

.submit-view{
    position: fixed;
    bottom: 0;
    left:0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    color:white;
    font-size: 30rpx;
    text-align: center;
    background: #9f9;
}
