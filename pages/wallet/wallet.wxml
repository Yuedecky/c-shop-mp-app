<view class='wallet-container flex-column bottom-40'>
  <view class='wallet-top flex-column'>
    <image src='{{iconImage}}' class='wallet-icon-image'></image>
    <view class='wallet-desc'>钱包金额</view>
  </view>
  <view class='wallet-count'>
    <text class='yuan'>￥</text>
    {{walletMoneyCount}}
  </view>
  <view class='wallet-to-activation flex-row bottom-240'>
    <view class='activation-count'>￥{{activationCount}}待激活，</view>
    <view class='view-activation-method' catchtap='onViewActivate'>查看激活方法</view>
    <popup id='popup' cancelText='知道了' confirmText='分享二维码' title='激活方法' content='第一步：分享我的二维码\r\n 第二步：好友扫码进行注册\r\n 第三步：好友注册后余额即可提现' bind:cancelEvent='popupCancel' bind:confirmEvent='popupConfirm' />
  </view>
  <view class='share-qrcode bottom-20'>分享二维码,赚更多钱</view>
  <view class='view-withdraw flex-column'>
    <button type='primary' disabled="{{detailDisabled}}" hover-class='none' bindtap='viewDetail' class='bottom-20 wallet-btn-class'>
      明细
    </button>
    <button type='primary' disabled='{{withDrawDisabled}}' class='bottom-20 wallet-btn-class' bindtap='withdraw'>
      提现
    </button>
  </view>
</view>