<view class='sp-container'>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{images}}" wx:for-item="item" wx:key="**this">
      <swiper-item>
        <image src="{{item}}" style="height:{{height}}rpx;width:100%;" />
      </swiper-item>
    </block>
  </swiper>
</view>