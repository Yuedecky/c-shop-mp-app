.cur-p-container{
    display: flex;
    flex-direction: column;
}

.cur-p-content{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding:20rpx;
}

.title-bottom{
    border-bottom: 1rpx solid #cccccc;
}

.cur-p-tags{
    display: flex;
    flex-direction: row;
    overflow: hidden;
    white-space: nowrap;
    height:50rpx;
    text-overflow: ellipsis; 
}

.cur-p-content .tag-item{
    margin-right: 10rpx;
    color: #999;
    line-height: 50rpx;
    font-size:26rpx;
}

.cur-p-content-right-arrrow{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}