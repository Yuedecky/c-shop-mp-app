<view class='p-card-container'>
    <view class='card-image-wrapper'>
        <image src="{{product.image}}" mode="aspectFill" class='card-image' />
    </view>
    <view class='card-product-info-wrapper'>
        <view class='c-product-i-name'>{{product.name}}</view>
        <view class='c-product-i-tags'>
            <block wx:for="{{product.tags}}" wx:key="**this">
                <view class='c-p-i-tag-item'>{{item}}</view>
            </block>
        </view>
        <view class='c-product-i-price'>
            <text class='price'>{{product.price}}</text>
            <text class='oPrice'>{{product.oPrice}}</text>
        </view>
        <view class='c-product-i-remark'>
            <text class='c-p-i-r-total'>{{product.remarkCount}}条评价</text>
            <text>好评率{{product.rating}}</text>
        </view>
    </view>
    <view class='card-product-buy-wrapper' wx:if="{{show}}">
        <van-button type="danger" plain hairline size="small" bind:click="click">立即0元购</van-button>
    </view>
</view>