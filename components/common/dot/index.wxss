.dot-container{
    display: flex;
    flex-direction: column;
    position: relative;
}
.dot-image{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background: rgba(120,120,120,0.5);
}

.chouti{
    z-index: 99;
    display: flex;
    width:120rpx;
    height:100rpx;
    border-radius: 10rpx;
    background:rgba(120,120,120,0.9);
    flex-direction: column;
    color:#fff;
    display: flex;
    line-height: 50rpx;
    flex-direction: column;
    align-items: center;
}

.dot-image-wrapper{
    width:100%;
    height: 40rpx;
    display: flex;
    flex-direction: row-reverse;
    margin-bottom: 10rpx;
}


.border-icon{
    border-bottom: 1rpx solid #333;
}