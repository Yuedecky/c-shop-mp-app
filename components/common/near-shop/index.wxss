
.sh-title{
  font-weight: bold;
  font-size:32rpx;
}

.near-sh-header{
  display: flex;
  flex-direction: row;
  padding:20rpx 10rpx 20rpx 10rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #efefef;
  margin-bottom: 20rpx;
}

.near-sh-header-left{
  display: flex;
  flex-direction: row;
}

.near-sh-title-o{
  padding-top: 4rpx;
  margin-right: 20rpx;
}

.near-sh-title-desc , .near-sh-title-o{
  margin-right: 10rpx;
}

.near-sh-title-desc {
  font-weight: bold;
}


.sh-custom{
  justify-content: space-between;
}


.sh-container{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.near-sh-content{
  display: flex;
  flex-direction: row;
  padding-right: 10rpx;
  justify-content: space-between;
}

.near-sh-header-right{
  color: #999;
}

.icon-location{
  width:40rpx;
  height:100%;
  margin-right: 20rpx;
}

.near-sh-left{
  display: flex;
  flex-direction: row;
}

.shop-times{
  color: red;
}

.shop-desc{
  display: flex;
  flex-direction: column;
}


.shop-times-desc, .shop-location{
  color:#999;
  font-size: 28rpx;
  line-height: 40rpx;
}

.shop-times{
  font-size: 28rpx;
  line-height: 40rpx;
  color: red;
}

.location-class{
  position: absolute;
  top:50rpx;
  left: 10rpx;
}

.shop-name{
  color:#333;
  font-size:32rpx;
  margin-bottom: 10rpx;
}

.photo-view{
  display: flex;
  flex-direction: row;
  position: relative;
}



.shop-url{
  width: 140rpx;
  height:120rpx;
  margin-right: 20rpx;
}

.photo-icon-arrow{
  position: absolute;
  top:46rpx;
  right:0;
}

