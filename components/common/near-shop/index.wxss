
.sh-container{
  padding: 20rpx;
  margin-bottom: 20rpx;
  height:120rpx;
  background: #efefef;
  display: flex;
  flex-direction: row;
}

.icon-location{
  width: 5%;
  position: relative;
  margin-right: 10rpx;
}

.icon-location > van-icon{
  position: absolute;
  top:40rpx;
}
.shop-desc{
  display: flex;
  width:68%;
  flex-direction: column;
}

.shop-location{
  font-size: 32rpx;
  font-weight: bold;
}

.shop-times{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.shop-name{
  color:#999;
  font-size:28rpx;
  margin-bottom: 10rpx;
}

.photo-view{
  height:100%;
  width:24%;
  position: relative;
  display: flex;
  flex-direction: row;
}



.shop-url{
  width: 140rpx;
  height:120rpx;
  margin-right: 20rpx;
}

.icon-class{
  position: absolute;
  top:40rpx;
  color: #999;
}
