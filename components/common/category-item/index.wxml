<view class='category-container'>
    <view wx:hidden="!needSearchBar">
        <van-search value="{{value}}" placeholder="搜索您想要的品牌、机型"></van-search>
    </view>
    <wq-header-bar image="{{image}}" bind:click="onHeaderBarClick"></wq-header-bar>
    <wq-slide-header-bar tabs="{{tabs}}" activeHeaderCode="{{activeHeaderCode}}" activeLeftCode="{{activeLeftCode}}" />
    <view class='ca-content-wrapper'>
        <view class="index-nav-left">
            <scroll-view scroll-y style='height:{{navLeftHeight}}px;'>
                <block wx:for="{{items}}" wx:key="id">
                    <wq-left-tab text="{{item.text}}" checked='{{item.id==current}}' bind:click="brandTap" code='{{item.id}}' />
                </block>
            </scroll-view>
        </view>
        <view class='index-nav-right'></view>
    </view>
</view>