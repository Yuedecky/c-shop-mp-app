.sale-container{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
}
.sale-image{
  margin-right: 20rpx;
  width: 220rpx;
  height: 260rpx;
}
.sale-phone-name{
  font-size: 46rpx;
  line-height: 50rpx;
  height: 50rpx;
  width: 100%;
  margin-bottom: 10rpx;
}
.sale-phone-desc{
  width: 100%;
  height: 300rpx;
}

.warning{
  color: #333;
}
.sale-phone-tags{
  width: 100%;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.phoneTagName{
  padding: 4rpx 8rpx 4rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  justify-content: center;
  border: solid 1px #ccc;
  align-items: center;
}

.sale-phone-gifts{
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.pGiftName{
  background: #ccc;
  font-weight: 500;
  justify-content: center;
  padding: 4rpx 10rpx 4rpx 10rpx;
  margin-right: 20rpx;
}

.sale-phone-price{
  font-size: 38rpx;
  display: flex;
  flex-direction: row;
}
.officalPrice{
  margin-right: 10rpx;
}
.reservationPrice{
  color: red;
  margin-right: 10rpx;
}